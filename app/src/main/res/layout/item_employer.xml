<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="java.lang.String"/>

        <variable
            name="presenter"
            type="com.github.markzhai.recyclerview.demo.MainActivity.DemoAdapterPresenter"/>

        <variable
            name="item"
            type="com.github.markzhai.recyclerview.demo.EmployerViewModel"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:onClick="@{() -> presenter.onItemClick(item)}"
        android:weightSum="4"
        android:padding="15dp">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:paddingRight="25dp"
            app:url="@{item.avatarUrl}"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{item.name}"
            android:layout_weight="1"
            tools:text="name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{String.valueOf(item.age)}"
            android:layout_weight="1"
            tools:text="15"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{item.position}"
            android:layout_weight="1"
            tools:text="position"/>

    </LinearLayout>
</layout>